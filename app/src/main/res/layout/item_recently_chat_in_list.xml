<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="3dp"
        app:civ_border_color="#FFFFFFFF"
        android:id="@+id/avatarRecentlyChat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/avatar_default"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/nameRecentlyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/avatarRecentlyChat"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:text="asdasdasdasd"
        />

    <TextView
        android:id="@+id/contentRecentlyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/avatarRecentlyChat"
        android:layout_below="@+id/nameRecentlyChat"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:text="sadasdasd"
        />

    <TextView
        android:id="@+id/timeRecentlyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/notifyNewMessage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        android:text="N"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timeRecentlyChat"
        android:visibility="visible"
        />

</RelativeLayout>